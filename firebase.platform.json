{
  "firestore": {
    "rules": "firestore.platform.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/checkin/**",
        "destination": "/checkin/index.html"
      },
      {
        "source": "/service/**",
        "destination": "/service/service.html"
      },
      {
        "source": "/schedule/**",
        "destination": "/schedule/index.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": false
  }
}
