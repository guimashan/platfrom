rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 輔助函數：檢查用戶是否已認證
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 輔助函數：取得用戶資料
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // 輔助函數：檢查用戶資料是否存在且有角色
    function hasUserData() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'roles' in getUserData();
    }
    
    // 輔助函數：檢查是否為超級管理員
    function isSuperAdmin() {
      return isAuthenticated() && hasUserData() && getUserData().roles.hasAny(['superadmin']);
    }
    
    // 輔助函數：檢查是否為管理員（任一類型）
    function isAnyAdmin() {
      return isAuthenticated() && hasUserData() && getUserData().roles.hasAny([
        'superadmin',
        'admin',
        'admin_checkin',
        'admin_service',
        'admin_schedule',
        'poweruser_checkin',
        'poweruser_service',
        'poweruser_schedule'
      ]);
    }
    
    // 用戶資料 (users)
    match /users/{userId} {
      // 所有已登入用戶可以讀取所有用戶資料（管理頁面需要）
      allow read: if isAuthenticated();
      // 本人可以更新自己的基本資料，或是管理員可以更新其他用戶
      allow update: if isAuthenticated() && (userId == request.auth.uid || isAnyAdmin());
      // 只有超級管理員可以創建和刪除用戶
      allow create, delete: if isSuperAdmin();
    }
    
    // LINE 登入資料 (lineUsers)
    match /lineUsers/{lineId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // LINE Bot 設定 (line_bot_settings)
    match /line_bot_settings/{document} {
      // 所有已登入的管理員可以讀取 LINE Bot 設定
      allow read: if isAnyAdmin();
      // 只有管理員可以修改 LINE Bot 設定
      allow write: if isAnyAdmin();
    }
    
    // LINE Bot 訊息日誌 (line_bot_logs)
    match /line_bot_logs/{logId} {
      // 管理員可以讀取訊息日誌
      allow read: if isAnyAdmin();
      // 禁止前端直接寫入日誌（只能由 Cloud Function 寫入）
      allow write: if false;
    }
  }
}
